<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="net.kaisti.txrxwidget" 
	android:versionCode="3"
	android:versionName="1.0.2">
	<application 
		android:icon="@drawable/txrx_on" 
		android:label="@string/app_name" android:enabled="true">
		
		<activity 
			android:name=".InfoActivity" 
			android:label="@string/app_name">
			<intent-filter>
				<action 
					android:name="android.intent.action.MAIN" />
				<category 
					android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>

		<receiver 
			android:name=".NotifyWidgetProvider">
			<intent-filter>
				<action 
					android:name="android.appwidget.action.APPWIDGET_UPDATE" />
			</intent-filter>
			<meta-data 
				android:name="android.appwidget.provider"
				android:resource="@xml/notifywidgetinfo" />
		</receiver>
		
		<service android:name=".NotifyWidgetProvider$NotifyWidgetService"></service>
	</application>
	<uses-sdk android:minSdkVersion="9" android:targetSdkVersion="10" /> 
	
	<uses-permission android:name="android.permission.INTERNET"/>
</manifest> 